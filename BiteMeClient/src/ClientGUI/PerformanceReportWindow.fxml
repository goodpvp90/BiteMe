<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="ClientGUI.PerformanceReportWindowController"
      alignment="CENTER" spacing="10" style="-fx-background-color: white;">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label text="Performance Report" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
    <Label fx:id="branchLabel" style="-fx-font-size: 16;"/>
    <Label fx:id="monthYearLabel" style="-fx-font-size: 16;"/>
    <PieChart fx:id="performanceChart" prefHeight="200" prefWidth="200" legendVisible="false"/>
    <HBox alignment="CENTER" spacing="10">
        <Label style="-fx-text-fill: #2ecc71;">●</Label>
        <Label fx:id="completedLabel" style="-fx-font-size: 14;"/>
    </HBox>
    <HBox alignment="CENTER" spacing="10">
        <Label style="-fx-text-fill: #e74c3c;">●</Label>
        <Label fx:id="notCompletedLabel" style="-fx-font-size: 14;"/>
    </HBox>
    <Label fx:id="performancePercentageLabel" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2ecc71;"/>
    <Button text="Close" onAction="#handleClose" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 8 16;"/>
</VBox>