<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="552.0" prefWidth="800" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ClientGUI.CustomerOrderCreation">
    <Button layoutX="10.0" layoutY="10.0" onAction="#handleBackButtonAction" prefHeight="30.0" prefWidth="110.0" text="BACK" />

    <Label layoutX="20.0" layoutY="50.0" style="-fx-font-weight: bold;" text="Please Choose a branch" />
    <ComboBox fx:id="branchComboBox" layoutX="20.0" layoutY="70.0" prefWidth="200.0" />

    <Label layoutX="20.0" layoutY="110.0" style="-fx-font-weight: bold;" text="Please Choose a Category from the menu" />
    <ComboBox fx:id="categoryComboBox" layoutX="20.0" layoutY="130.0" onAction="#handleCategorySelection" prefWidth="200.0" />

    <Label layoutX="20.0" layoutY="170.0" style="-fx-font-weight: bold;" text="Please Select Desired Items" />

    <TableView fx:id="menuTableView" layoutX="20.0" layoutY="190.0" prefHeight="200.0" prefWidth="760.0">
	    <columns>
	        <TableColumn fx:id="nameColumn" prefWidth="250.0" text="Name" />
	        <TableColumn fx:id="priceColumn" prefWidth="250.0" text="Price" />
	        <TableColumn fx:id="optionalsColumn" prefWidth="250.0" text="Optionals" />
	    </columns>
	</TableView>

    <Label layoutX="20.0" layoutY="410.0" style="-fx-font-weight: bold;" text="Selected Items:" />
    <ListView fx:id="selectedItemsListView" layoutX="20.0" layoutY="430.0" prefHeight="100.0" prefWidth="760.0" />

    <Button layoutX="608.0" layoutY="7.0" onAction="#handleContinueAction" prefHeight="67.0" prefWidth="185.0" text="CONTINUE" />
    <Button layoutX="325.0" layoutY="390.0" onAction="#handleConfirmSelectionAction" prefHeight="30.0" prefWidth="150.0" text="SAVE SELECTIONS" />
</AnchorPane>
