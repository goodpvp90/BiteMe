<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="700.0" stylesheets="@client.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ClientGUI.ClientLoginController">
   <children>
      <VBox alignment="CENTER" spacing="20" AnchorPane.topAnchor="60.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <Text fx:id="headlineText" strokeType="OUTSIDE" strokeWidth="0.0" text="Welcome">
            <font>
               <Font size="40.0" />
            </font>
         </Text>
         
         <Text fx:id="subtitleText" strokeType="OUTSIDE" strokeWidth="0.0" text="Please enter Username &amp; Password">
            <font>
               <Font size="18.0" />
            </font>
         </Text>
         
         <VBox alignment="CENTER" spacing="10">
            <HBox alignment="CENTER" spacing="10">
               <Label text="Username:" styleClass="login-label" />
               <TextField fx:id="usernameField" prefWidth="200" />
            </HBox>
            
            <HBox alignment="CENTER" spacing="10">
               <Label text="Password:" styleClass="login-label" />
               <PasswordField fx:id="passwordField" prefWidth="200" />
            </HBox>
         </VBox>
         
         <Text fx:id="errorText" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0" text="Error text" visible="false">
            <font>
               <Font size="16.0" />
            </font>
         </Text>
         
         <HBox alignment="CENTER" spacing="50">
            <Button fx:id="loginButton" mnemonicParsing="false" text="Login" prefHeight="50.0" prefWidth="130.0" />
            <Button fx:id="quitButton" mnemonicParsing="false" text="Quit" prefHeight="50.0" prefWidth="130.0" styleClass="logout-button" />
         </HBox>
      </VBox>
   </children>
</AnchorPane>