<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@client.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ClientGUI.ClientConnectController">
   <children>
      <VBox alignment="CENTER" spacing="20.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="60.0">
         <children>
            <Text fx:id="headlineText" text="Client Connect">
               <font>
                  <Font size="36.0" />
               </font>
            </Text>
            <Text text="Enter server IP:">
               <font>
                  <Font size="18.0" />
               </font>
            </Text>
            <TextField fx:id="serverIpTextField" maxWidth="300.0" promptText="Enter IP address" />
            <Text text="Enter server Port:">
               <font>
                  <Font size="18.0" />
               </font>
            </Text>
            <TextField fx:id="serverPortTextField" maxWidth="300.0" promptText="Enter port number" text="5555" />
            <Text fx:id="ErrorTextConnect" fill="RED" textAlignment="CENTER" visible="false" wrappingWidth="719.3332848548889">
               <font>
                  <Font size="16.0" />
               </font>
            </Text>
            <Button fx:id="connectButton" mnemonicParsing="false" onAction="#handleConnectButtonAction" prefHeight="50.0" prefWidth="130.0" text="Connect" />
            <Button fx:id="quitButton" mnemonicParsing="false" onAction="#handleQuitButtonAction" prefHeight="50.0" prefWidth="130.0" styleClass="logout-button" text="Quit" />
         </children>
      </VBox>
   </children>
</AnchorPane>
