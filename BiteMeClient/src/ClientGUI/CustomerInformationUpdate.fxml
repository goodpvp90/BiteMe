<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="700.0" prefWidth="700.0" stylesheets="@client.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ClientGUI.CustomerInformationUpdateController">
   <children>
      <Button fx:id="backButton" layoutX="20.0" layoutY="20.0" minHeight="30.0" minWidth="70.0" mnemonicParsing="false" onAction="#handleBack" styleClass="logout-button" text="Back" />
      
      <VBox alignment="CENTER" layoutX="0.0" layoutY="60.0" prefWidth="700.0" spacing="20.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <children>
            <Text fx:id="headlineText" strokeType="OUTSIDE" strokeWidth="0.0" text="Customer Information Update">
               <font>
                  <Font size="36.0" />
               </font>
            </Text>
            <Text layoutX="100.0" layoutY="150.0" text="Please enter the customer's information" textAlignment="CENTER" wrappingWidth="400.0">
               <font>
                  <Font size="18.0" />
               </font>
            </Text>
            <Text fill="RED" layoutX="100.0" layoutY="180.0" text="*Please note, adding a credit card will change the status of the customer to Private" textAlignment="CENTER" wrappingWidth="400.0">
               <font>
                  <Font size="14.0" />
               </font>
            </Text>
         </children>
      </VBox>
      <TextField fx:id="idField" layoutX="191.0" layoutY="250.0" maxWidth="323.0" prefHeight="48.0" prefWidth="323.0" promptText="ID" />
      <TextField fx:id="firstNameField" layoutX="191.0" layoutY="310.0" maxWidth="323.0" prefHeight="48.0" prefWidth="323.0" promptText="First Name" />
      <TextField fx:id="lastNameField" layoutX="191.0" layoutY="370.0" maxWidth="323.0" prefHeight="48.0" prefWidth="323.0" promptText="Last Name" />
      <TextField fx:id="emailField" layoutX="191.0" layoutY="430.0" maxWidth="323.0" prefHeight="48.0" prefWidth="323.0" promptText="Email" />
      <TextField fx:id="phoneNumberField" layoutX="191.0" layoutY="490.0" maxWidth="323.0" prefHeight="48.0" prefWidth="323.0" promptText="Phone Number" />
      <TextField fx:id="creditCardField" layoutX="191.0" layoutY="550.0" maxWidth="323.0" prefHeight="48.0" prefWidth="323.0" promptText="Credit Card (optional)" />
      <Text fx:id="errorText" fill="RED" layoutX="191.0" layoutY="620.0" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER" visible="false" wrappingWidth="323.0">
         <font>
            <Font size="14.0" />
         </font>
      </Text>
      <Button fx:id="updateButton" layoutX="257.0" layoutY="636.0" mnemonicParsing="false" onAction="#handleUpdate" prefHeight="50.0" prefWidth="191.0" text="Activate Customer" />
   </children>
</AnchorPane>
